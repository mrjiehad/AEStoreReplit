# AECOIN Store Production Environment Variables
# Copy this file to .env and update with your actual values

# Session secret - required for express-session
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'));"
SESSION_SECRET=your-very-secure-session-secret-here

# Node environment
NODE_ENV=production

# Port (default is 3000, Nginx will proxy to this port)
PORT=3000

# Database URL for PostgreSQL
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@localhost:5432/aecoin_store?sslmode=require

# Discord App OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
# Update this with your actual domain
DISCORD_REDIRECT_URI=https://yourdomain.com/api/auth/discord/callback

# FiveM Database Integration (optional)
FIVEM_DB_HOST=your_fivem_mysql_host
FIVEM_DB_PORT=3306
FIVEM_DB_NAME=your_fivem_database_name
FIVEM_DB_USER=your_fivem_db_user
FIVEM_DB_PASSWORD=your_fivem_db_password
FIVEM_DB_TABLE=ak4y_donatesystem_codes
FIVEM_DB_COLUMN_CODE=code
FIVEM_DB_COLUMN_CREDITSVALUE=credit

# Stripe Payment Processing (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_actual_stripe_webhook_secret
VITE_STRIPE_PUBLIC_KEY=pk_live_your_actual_stripe_public_key

# ToyyibPay Integration (optional, for Malaysian payments)
TOYYIBPAY_SECRET_KEY=your_toyyibpay_secret_key

# Resend Email Service (for order confirmations)
RESEND_API_KEY=your_resend_api_key

# Admin Email (for admin notifications)
ADMIN_EMAIL=admin@yourdomain.com